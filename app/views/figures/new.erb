<h2>Create a figure </h2>

<form action="/figures" method="POST">
  <input type="text" name="figure[name]">

  <label>Choose a title for a figure!</label>  <br>
  <% @titles.each do |title| %>
    <input type="checkbox" name="titles[]" value="<%= title.id %>" id="<%= title.name %>"><%= title.name %> <br>
  <% end %>



</form>